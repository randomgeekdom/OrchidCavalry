<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="OrchidCavalry.Popups.NewGame"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="New Game"
    BackgroundColor="Wheat"
    BindingContext="OrchidCavalry.Popups.NewGame">
    <VerticalStackLayout
        Margin="10"
        Padding="5"
        VerticalOptions="CenterAndExpand">



        <Label WidthRequest="400" FlowDirection="MatchParent" Text="You have inherited the title of Governor of Orchid Island.  What was once the command center of the greatest military force in the world has become a skeleton of what it once was.  However, you don't plan to let Orchid Island remain a merely a meager homestead.  You plan to reignite the name that once made this island proud.  However, it's up to you to decide what the Orchid Cavalry will become.">
        </Label>
        
        <Entry
            HorizontalTextAlignment="Center"
            MaxLength="35"
            Placeholder="Character first name?"
            PlaceholderColor="DarkSlateGrey"
            Text="{Binding Path=CharacterName, Mode=TwoWay}"
            Keyboard="Text"
            Completed="StartGame"
            WidthRequest="400" />


        <Button
            Clicked="StartGame"
            IsEnabled="{Binding CanStart}"
            Text="Start Game"
            WidthRequest="200" />


        <!--</Frame>-->
    </VerticalStackLayout>
</ContentPage>