<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="OrchidCavalry.Popups.NewGame"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="New Game"
    BackgroundColor="Wheat"
    BindingContext="OrchidCavalry.Popups.NewGame">
    <VerticalStackLayout
        Margin="10"
        Padding="5"
        VerticalOptions="CenterAndExpand">

        <Entry
            HorizontalTextAlignment="Center"
            Placeholder="What will be your character's first name?"
            PlaceholderColor="DarkSlateGrey"
            Text="{Binding Path=CharacterName, Mode=TwoWay}"
            WidthRequest="400" />

        <HorizontalStackLayout HorizontalOptions="Center" VerticalOptions="Center">

            <RadioButton
                Content="Male"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                Value="{Binding IsMale}" />
            <RadioButton
                Content="Female"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                Value="{Binding IsFemale}" />
        </HorizontalStackLayout>


        <Button
            Clicked="Button_Clicked"
            IsEnabled="{Binding CanStart}"
            Text="Start Game"
            WidthRequest="200" />


        <!--</Frame>-->
    </VerticalStackLayout>
</ContentPage>