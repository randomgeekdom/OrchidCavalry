<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="OrchidCavalry.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title=""
    BackgroundColor="Wheat">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25"
            VerticalOptions="Center">

            <!--<Image
            Aspect="AspectFit"
            MaximumWidthRequest="1000"
            Source="logo.png" />-->

            <Label
                FontFamily="GreatVibes"
                FontSize="100"
                
                HorizontalOptions="CenterAndExpand"
                Text="Orchid Cavalry" />

            <FlexLayout 
                Wrap="Wrap"
                HorizontalOptions="Center">
                <Button
                x:Name="StartButton"
                Clicked="StartButton_Clicked"
                Text="PLAY"
                WidthRequest="200" />
                <Button
                x:Name="ExitButton"
                    Clicked="ExitButton_Clicked"
                HorizontalOptions="Center"
                Text="EXIT"
                WidthRequest="200" />
            </FlexLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>